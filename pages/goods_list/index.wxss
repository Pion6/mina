.first_tabs .goods_item {
  display: flex;
  border-bottom: 1px solid #ccc;
}
.first_tabs .goods_item .goods_img_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.first_tabs .goods_item .goods_img_wrap image {
  width: 70%;
}
.first_tabs .goods_item .goods_info-wrap {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.first_tabs .goods_item .goods_info-wrap .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.first_tabs .goods_item .goods_info-wrap .goods_price {
  color: #DE3A39;
  font-size: 32rpx;
}
